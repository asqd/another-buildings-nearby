<% if @buildings.any? %>

<table class="table" cellspacing="10">
	<tr>
<th>Адрес</th>
<th class="span3" >Расстояние от маркера*</th>
	</tr>
	<% @buildings.each do |distance, building| %>
	<tr>
		<td><%= building.address %></td> 
		<!-- Перобразовываем расстояние если оно меньше 1 километра в метры -->
		<td class="distance"><%= format_distance(distance) %></td>
	</tr>
	<% end %>
</table>
<p class="notice" >*Здания отображаются в радиусе 4 км от маркера</p>
<% end %>